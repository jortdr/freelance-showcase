{
    "preset": "laravel",
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "declare_strict_types": true,
        "no_extra_blank_lines": {
            "tokens": [
                "extra",
                "use",
                "square_brace_block",
                "curly_brace_block"
            ]
        },
        "nullable_type_declaration_for_default_null_value": true
    },
    "exclude": [
        "bootstrap/*",
        "storage/*"
    ]
}
